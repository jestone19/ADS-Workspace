
public class BubbleSorter 
{
	private int[] a;
	private int counter;
	
	public BubbleSorter(int[] a)
	{
		this.a = a;
		counter = 0;
	}
	
	public void sort()
	{
		for (int i = a.length; i > 0; i --)
		{
			if (a[i] < a[i-1])
			{
				int temp = a[i];
				a[i] = a[i-1];
				a[i-1] = temp;
			}
		}
	}
}
